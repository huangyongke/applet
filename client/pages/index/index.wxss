.container {
  margin: 0 auto;
  padding: 0 5%;
  font-size: 100%;
}

.page_header {
  margin-left: -450rpx;
  padding: 50rpx;
}

.add_image{
  width: 80rpx;
	height: 80rpx;
  float: left; 
}
.page_title{
  padding-right: 30rpx;
  font-size: 60rpx;
  float: left;
}
.plan_list {
  margin: 0 0 30rpx 200rpx;
  padding-left: 30rpx;
  border-left: 30rpx solid #eee9dc;
  display: flex;
  flex-direction: column;

}
.start_date{
  margin-top: -90rpx;
  top: 50%;
  left: -255rpx;
  line-height: 20rpx;
  position: absolute;
  font-size: 30rpx;
  color: #bdd0db;
  border-width: 0 0 5rpx 0;
  border-style: groove;
  border-color: #6cbfee;
  padding-bottom: 84rpx;
}

.start_time{
  margin-top: -40rpx;
  top: 50%;
  left: -230rpx;
  line-height: 20rpx;
  position: absolute;
  font-size: 40rpx;
  color: #6cbfee;
  
}

.time_segmentation{
  border: 0;
  height: 1px;

  background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
}

.end_date{
  margin-top: 50rpx;
  top: 50%;
  left: -255rpx;
  line-height: 20rpx;
  position: absolute;
  font-size: 30rpx;
  color: #bdd0db;
}

.end_time{
  margin-top: 100rpx;
  top: 50%;
  left: -230rpx;
  line-height: 20rpx;
  position: absolute;
  font-size: 40rpx;
  color: #6cbfee;
}

.segmenting_line{
  height: 12rpx;
  border: 0;
  box-shadow: inset 0 20rpx 20rpx -20rpx rgba(0, 0, 0, 0.5);
}


.work {
  margin: 130rpx 0;
  position: relative;
}



.circle {
  margin-top: -10rpx;
  top: 50%;
  left: -63rpx;
  width: 24rpx;
  height: 24rpx;
  background: #48b379;
  border: 11.7rpx solid #eee9dc;
  border-radius: 50%;
  display: block;
  position: absolute;
}

.content{
  margin-top: 10rpx;
  top: 50%;
  width: 400rpx;
  font-size: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.unlogin-card {
  display: flex;
  align-items: center;
  margin: 50rpx 27rpx 0;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.unlogin-head {
  flex-shrink: 0;
  margin-left: 53rpx;
  height: 100rpx;
  width: 100rpx;
  background: #F5E069;
  border-radius: 50%;
}

.unlogin-info {
  flex: 1;
  margin-left: 31rpx;
}

.unlogin-text {
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}

.unlogin-tips {
  margin-top: 6rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #8B8B8B;
}

.unlogin-btn {
  margin: 34rpx auto 0;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #F5E069;
  outline: none;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  color: #34373D;
  font-weight: bold;
}

.unlogin-btn::after {
  border: none;
}





